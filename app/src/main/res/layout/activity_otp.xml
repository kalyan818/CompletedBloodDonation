<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.kalyansai.blooddonation1.Otp">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText1"
            android:layout_below="@+id/MobileNumberField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="Enter Mobile Number"
            android:id="@+id/MobileNumber"
            android:textColorHint="@color/white">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/MobileNumberBox"
                android:textColor="@color/white" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText1"
            android:layout_below="@+id/MobileNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Enter Otp "
            android:id="@+id/VerifyField"
            android:textColorHint="@color/white">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/OtpField"
                android:textColor="@color/white" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verify"
            android:id="@+id/verify"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:background="@drawable/logut_button"
            android:layout_below="@+id/VerifyField"
            android:layout_alignRight="@+id/VerifyField"
            android:layout_alignEnd="@+id/VerifyField" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Otp"
            android:id="@+id/SendOtp"
            android:textColor="@color/white"
            android:background="@drawable/logut_button"
            android:layout_alignBaseline="@+id/verify"
            android:layout_alignBottom="@+id/verify"
            android:layout_alignLeft="@+id/VerifyField"
            android:layout_alignStart="@+id/VerifyField" />
    </RelativeLayout>

</RelativeLayout>
