<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.kalyansai.blooddonation1.Hospitals">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Require For"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Doctor Referenced Page"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BloodRequiredFor"
        android:layout_marginTop="20dp"
        android:id="@+id/text" />
<ImageView
    android:layout_width="300dp"
    android:id="@+id/imageView"
    android:src="@mipmap/ic_launcher"
    android:layout_height="300dp"
    android:layout_alignTop="@+id/CapureButton"
    android:layout_alignLeft="@+id/BloodRequiredFor"
    android:layout_alignStart="@+id/BloodRequiredFor"
    android:layout_marginTop="51dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Choose image"
        android:id="@+id/CapureButton"
        android:background="@drawable/logut_button"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/OkSubmit"
        android:textColor="@color/white"
        android:background="@drawable/logut_button"
        android:layout_alignBaseline="@+id/CapureButton"
        android:layout_alignBottom="@+id/CapureButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <Spinner
        android:id="@+id/BloodRequiredFor"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp" />
</RelativeLayout>
